<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dj__login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.realtest2.DJ_Login">

    <EditText
        android:layout_width="264dp"
        android:layout_height="47dp"
        android:inputType="textPersonName"
        android:text="@string/username"
        android:ems="10"
        android:id="@+id/username"
        app:layout_constraintLeft_toLeftOf="@+id/activity_dj__login"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_dj__login"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_dj__login"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_dj__login"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.21" />

    <EditText
        android:layout_width="264dp"
        android:layout_height="54dp"
        android:inputType="textPersonName"
        android:text="@string/password"
        android:ems="10"
        android:id="@+id/password"
        app:layout_constraintLeft_toLeftOf="@+id/activity_dj__login"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:layout_marginTop="48dp"
        app:layout_constraintRight_toRightOf="@+id/activity_dj__login"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_dj__login"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:text="@string/login"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/djLoginButton"
        app:layout_constraintLeft_toLeftOf="@+id/activity_dj__login"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/partyName"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/partyName"
        app:layout_constraintBottom_toBottomOf="@+id/activity_dj__login"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.39" />

    <EditText
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="@string/partyName"
        android:ems="10"
        android:id="@+id/partyName"
        app:layout_constraintLeft_toLeftOf="@+id/activity_dj__login"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="@+id/activity_dj__login"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_dj__login"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.060000002" />


</android.support.constraint.ConstraintLayout>
